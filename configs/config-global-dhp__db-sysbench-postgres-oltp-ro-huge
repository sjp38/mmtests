# List of monitors
export RUN_MONITOR=yes
export MONITORS_ALWAYS=
export MONITORS_PLAIN=
export MONITORS_GZIP="proc-vmstat top slabinfo"
export MONITORS_WITH_LATENCY="vmstat iostat"
export MONITOR_UPDATE_FREQUENCY=10

# sysbench
export OLTP_CACHESIZE=$(($MEMTOTAL_BYTES*6/10))
export OLTP_SHAREDBUFFERS=$((MEMTOTAL_BYTES/4))
export OLTP_PAGESIZES="default"
export SYSBENCH_DRIVER=postgres
export SYSBENCH_MAX_TRANSACTIONS=auto
export SYSBENCH_READONLY=yes
export SYSBENCH_MAX_THREADS=$((NUMCPUS*4))
export SYSBENCH_ITERATIONS=3
export SYSBENCH_WORKLOAD_SIZE=$((MEMTOTAL_BYTES*4))
